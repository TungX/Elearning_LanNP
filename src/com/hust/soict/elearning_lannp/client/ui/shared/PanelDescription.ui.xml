<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.spacing {
		margin-right: 10px;
		width: 45px;
		height: 45px;
	}
	
	.description-header {
		margin-bottom: 10px;
	}
	
	.btn-base {
		width: 100px;
		text-align: left;
		margin-right: 5px;
	}
	</ui:style>
	<b:Panel>
		<b:PanelBody>
			<b.html:Div addStyleNames="{style.description-header}">
				<b:Image addStyleNames="{style.spacing}" type="CIRCLE"
					url="uploads/anhdep.jpg" ui:field="avatar" />
				<b.html:Strong ui:field="name" text="Yin Long" />
				<b:Button pull="RIGHT" text="Remove" ui:field="btnRemove"
					type="DANGER" icon="TRASH_O" styleName="{style.btn-base}" />
				<b:Button pull="RIGHT" text="Edit" ui:field="btnEdit" type="PRIMARY"
					icon="PENCIL_SQUARE_O" styleName="{style.btn-base}" />
			</b.html:Div>
			<b.html:Div>
				<b.html:Text ui:field="content" text="" />
			</b.html:Div>
		</b:PanelBody>
	</b:Panel>

</ui:UiBinder> 