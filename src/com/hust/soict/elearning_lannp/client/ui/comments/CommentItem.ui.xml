<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.comments {
		
	}
	
	.comments .spacing {
		margin-right: 10px;
		width: 45px;
		height: 45px;
	}
	
	.comments .content {
		margin-bottom: 10px;
	}
	
	.comments .name {
		margin-right: 5px;
	}
	</ui:style>
	<b:Panel>
		<b:PanelBody addStyleNames="{style.comments}">
			<b.html:Div addStyleNames="{style.content}">
				<b:Image addStyleNames="{style.spacing}" type="CIRCLE"
					url="uploads/anhdep.jpg" ui:field="avatar" />
				<b.html:Strong ui:field="name" text="Yin Long"
					addStyleNames="{style.name}" />
				<b.html:Text ui:field="content" />
			</b.html:Div>
		</b:PanelBody>
	</b:Panel>
</ui:UiBinder> 