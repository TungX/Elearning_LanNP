<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">
	<ui:style>
	.table-style {
		border: 1px solid black;
	}
	
	.courses {
		margin: 0 auto;
		max-width: 1300px;
	}
	
	.courses h2 {
		margin-left: 5px;
		margin-bottom: 0;
		border-bottom: 1px solid gray;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.courses}">
		<H2>
			Courses
		</H2>
		<b:Anchor text="Add course" pull="RIGHT" icon="PLUS"
			ui:field="linkAddCourse" />
		<b:Column size="XS_12">
			<b:Column size="XS_12">
				<b:PanelGroup ui:field="courses"></b:PanelGroup>
			</b:Column>
		</b:Column>
	</g:HTMLPanel>


</ui:UiBinder> 