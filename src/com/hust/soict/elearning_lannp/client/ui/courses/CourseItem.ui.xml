	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.spacing {
		margin-right: 10px;
	}
	
	.space_top_and_left {
		margin-top: 10px;
		margin-left: 5px;
	}
	</ui:style>
	<b:Panel>
		<b:PanelHeader>
			<b:Heading size="H3" ui:field="txtTitle" />
		</b:PanelHeader>
		<b:PanelBody>
			<b.html:Text ui:field="txtDescription" />
		</b:PanelBody>
	</b:Panel>
</ui:UiBinder> 