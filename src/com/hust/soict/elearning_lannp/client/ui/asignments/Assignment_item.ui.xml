<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.mouse-pointer {
		cursor: pointer;
	}
	</ui:style>
	<b:Panel type="WARNING">
		<b:PanelHeader>
			<b:Icon type="TASKS" />
			<b:Anchor ui:field="url" />
			
			<b:Tooltip title="Show content">
				<b:Anchor icon="CHEVRON_DOWN" pull="RIGHT" ui:field="btnContent" />
			</b:Tooltip>
		</b:PanelHeader>
		<b:PanelBody ui:field="body" visible="false">
			<b.html:Text ui:field="description" />
		</b:PanelBody>
	</b:Panel>
</ui:UiBinder> 