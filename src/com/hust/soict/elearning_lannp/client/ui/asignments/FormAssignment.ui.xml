<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
	
	</ui:style>
	<b:Modal title="Add assignement" closable="true" fade="true"
		dataBackdrop="STATIC" dataKeyboard="true" ui:field="modalAddAssignment">

		<b:ModalBody>
			<b:Form type="HORIZONTAL">
				<b:FormGroup>
					<b:FormLabel for="formName" addStyleNames="col-lg-2">Name*</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-10">
						<b:TextBox placeholder="Name" b:id="formName" ui:field="txtName" />
					</g:FlowPanel>
				</b:FormGroup>

				<b:FormGroup>
					<b:FormLabel for="formDescription" addStyleNames="col-lg-2">Description*</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-10">
						<b:TextArea ui:field="txtDescription" />
					</g:FlowPanel>
				</b:FormGroup>

				<b:FormGroup>
					<b:FormLabel for="formDateline" addStyleNames="col-lg-2">Deadline</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-10">
						<b:TextBox b:id="formName" ui:field="txtDate" />
					</g:FlowPanel>
				</b:FormGroup>
				<b:FormGroup visible="false" ui:field="formDatePicker">
					<b:FormLabel for="formDateline" addStyleNames="col-lg-2"></b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-10">
						<dp:DatePicker ui:field="datePicker"/>
					</g:FlowPanel>
				</b:FormGroup>
			</b:Form>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button type="DEFAULT" dataDismiss="MODAL">Cancel</b:Button>
			<b:Button type="PRIMARY" ui:field="btnSave">Submit</b:Button>
		</b:ModalFooter>

	</b:Modal>
</ui:UiBinder> 