<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:ls="urn:import:com.hust.soict.elearning_lannp.client.ui.shared">
	<ui:style>
	.gwt-header-course {
		width: 100%;
		min-height: 100px;
		max-height: 400px;
		height: auto;
		position: relative;
	}
	
	.gwt-title-course {
		position: relative;
	}
	
	.gwt-teacher-course {
		text-align: center;
		position: relative;
	}
	
	.gwt-description {
		margin-bottom: 20px;
	}
	
	.gwt-panel {
		min-height: 85vh;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class='{style.gwt-header-course}'>
			<H1 class='{style.gwt-title-course}'>
				<b.html:Text ui:field="txtCourseName" />
			</H1>
		</div>
		<div class='{style.gwt-description}'>
			<ls:PanelDescription ui:field="panelDescription" />
		</div>
		<b.html:Div ui:field="content" />
	</g:HTMLPanel>

</ui:UiBinder> 